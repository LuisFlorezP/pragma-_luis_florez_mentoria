{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "outDir": "./dist",
        "resolveJsonModule": true,
        "baseUrl": "./",
        "paths": {
            "@controllers/*": [
                "src/controllers/*"
            ],
            "@services/*": [
                "src/services/*"
            ],
            "@utils/*": [
                "src/utils/*"
            ]
        }
    },
    "include": [
        "src/**/*",
        "src/types/declarations.d.ts"
    ]
}